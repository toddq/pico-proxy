<h3 class="title is-4">Sessions</h3>
<div class="box">
    <div class="columns">
        <div class="column"><span class="title is-5">Date</span></div>
        <div class="column"><span class="title is-5">Beer</span></div>
        <div class="column"><span class="title is-5"></span></div>
        <% if whats_picobrewing %>
            <div class="column is-1"><span class="title is-5"></span></div>
        <% end %>
    </div>

    <% sessions.each do |session| %>
        <div class="columns">
            <div class="column"><%= session['StartTime'] %></div>
            <div class="column">
                <a href="/recipe/<%= session['RecipeGUID'] %>">
                    <%= session['BeerName'] %>
                </a>
            </div>
            <div class="column">
                <a href="/session/<%= session['GUID'] %>">
                    Session Details
                </a>
            </div>
            <% if whats_picobrewing %>
                <div class="column is-1">
                    <a href="/whats-picobrewing/index.html#?sessionId=<%= session['GUID'] %>">Alt View</a>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
<div>
    <a href="/api/sessions?format=pretty" target="_blank">[Raw]</a>
    <pre class="hidden"><%= JSON.pretty_generate(sessions) %></pre>
</div>
